release version type number:
    #!/usr/bin/env bash
    if [ "{{type}}" = "stable" ]; then
        TAG="v{{version}}"
    else
        TAG="v{{version}}-beta.{{number}}"
    fi
    echo "ðŸš€ Releasing... $TAG"
    git tag -a "$TAG" -m "Bugster CLI $TAG" && git push origin --tags
    echo "âœ… Done!"
